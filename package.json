{
  "name": "email-designer",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "fix": "run-s fix:*",
    "fix:lint": "next lint --fix",
    "fix:prettier": "prettier --write 'src/**/*.{js,jsx,ts,tsx,json,css,scss,md}'",
    "prepare": "husky install",
    "lint-staged": "lint-staged"
  },
  "dependencies": {
    "next": "12.1.6",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.1",
    "@commitlint/config-conventional": "^17.0.0",
    "husky": "^8.0.1",
    "lint-staged": "^12.4.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.1",
    "eslint": "8.18.0",
    "eslint-config-next": "12.1.6"
  },
  "lint-staged": {
    "src/**/*.{js,jsx}": [
      "yarn eslint --fix",
      "yarn prettier --write"
    ]
  }
}
